= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :post_id
    = f.number_field :post_id
  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
